[Unit]
    Description=Brainhugger service

[Service]
    ExecStart=/home/brainhugger/go/src/brainhugger/run.sh
    WorkingDirectory=/home/brainhugger/go/src/brainhugger
    User=brainhugger
    Group=brainhugger
    Restart=on-failure
    RestartSec=2s
    # CPUQuota=400%

[Install]
    WantedBy=multi-user.target
